{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "automerge": true,
            "automergeType": "pr",
            "datasources": ["github-releases", "github-tags"],
            "packagePatterns": ["^actions\\/"],
            "groupName": "github actions"
        },
        {
            "automerge": true,
            "automergeType": "pr",
            "matchManagers": ["gomod"],
            "matchPackagePatterns": ["*"],
            "schedule": ["at any time"],
            "groupName": "all go modules"
        }
    ]
}
